@model CreateSliderViewModel

@{
    ViewData["Title"] = "Add Slider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="card">
    <div class="card-header">
        <h1>Add New Slider Data</h1>
        <a asp-controller="slider" asp-action="Create" asp-area="Admin" class="btn btn-info mt-2">Add Slider Data</a>
    </div>
    <div class="card-body">
        
        <form asp-action="Create" asp-controller="Slider" asp-area="Admin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" cols="5" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
                <a asp-action="Index" asp-controller="slider" asp-area="Admin" class="btn btn-danger">Back to List</a>
            </div>
        </form>
    </div>
</div>
@section Scripts
{
<partial name="_Validation" />

}