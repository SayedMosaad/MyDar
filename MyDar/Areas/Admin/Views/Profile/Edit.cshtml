@model EditProfileViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        Create Profile
    </div>
    <div class="card-body">
        <form asp-area="Admin" asp-controller="Profile" asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="AboutUs" class="control-label"></label>
                <textarea id="aboutus" asp-for="AboutUs" class="form-control" cols="5" rows="4"></textarea>
                <span asp-validation-for="AboutUs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Image" />
                <label asp-for="File" class="control-label"></label>
                <input type="file" name="File" asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vission" class="control-label"></label>
                <textarea asp-for="Vission" class="form-control" cols="5" rows="4"></textarea>
                <span asp-validation-for="Vission" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mission" class="control-label"></label>
                <textarea asp-for="Mission" class="form-control" cols="5" rows="4"></textarea>
                <span asp-validation-for="Mission" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plan" class="control-label"></label>
                <textarea asp-for="Plan" class="form-control" cols="5" rows="4"></textarea>
                <span asp-validation-for="Plan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Care" class="control-label"></label>
                <textarea asp-for="Care" class="form-control" cols="5" rows="4"></textarea>
                <span asp-validation-for="Care" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address1" class="control-label"></label>
                <input asp-for="Address1" class="form-control" />
                <span asp-validation-for="Address1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address2" class="control-label"></label>
                <input asp-for="Address2" class="form-control" />
                <span asp-validation-for="Address2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address3" class="control-label"></label>
                <input asp-for="Address3" class="form-control" />
                <span asp-validation-for="Address3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectsNum" class="control-label"></label>
                <input asp-for="ProjectsNum" class="form-control" />
                <span asp-validation-for="ProjectsNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientNum" class="control-label"></label>
                <input asp-for="ClientNum" class="form-control" />
                <span asp-validation-for="ClientNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkerNum" class="control-label"></label>
                <input asp-for="WorkerNum" class="form-control" />
                <span asp-validation-for="WorkerNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoursNum" class="control-label"></label>
                <input asp-for="HoursNum" class="form-control" />
                <span asp-validation-for="HoursNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts
{
    <partial name="_Validation" />
    @*<script src="~/lib/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">CKEDITOR.replace('aboutus');</script>*@

}
