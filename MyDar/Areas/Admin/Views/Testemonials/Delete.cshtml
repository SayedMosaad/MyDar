@model MyDar.Areas.Admin.Models.Testemonials

@{
    ViewData["Title"] = "Delete Openion";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mt-2">Are you sure you want to delete this Openion?</h3>
    
<div class="card mt-2 col-6">
    <div class="card-header">
        <h3 class="card-title">@Model.Name</h3>
    </div>
    <div class="card-body d-flex">
        <blockquote class="col-6">@Model.Description</blockquote>
        <img src="~/images/testemonials/@Model.Image" class="col-4 rounded-circle img-thumbnail" />
    </div>
    <div class="card-footer">
        <form asp-action="Delete" method="post">
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            <a asp-area="Admin" asp-controller="Testemonials" asp-action="Index" class="btn btn-success">Cancel</a>
        </form>
    </div>
</div>
