@model MyDar.ViewModels.IndexViewModel
@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Context.Request.Method != "HTTPGet")
{

    <main id="main">
        <!-- ======= Contact Section ======= -->
        <section class="contact" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
            <div class="container">

                <div class="row">

                    <div class="col-lg-6">
                        @for (int i = 0; i < Model.Profiles.Count; i++)
                        {
                            if (i == 0)
                            {
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="info-box">
                                            <i class="bx bx-map"></i>
                                            <h3>Our Address</h3>
                                            <p>@Model.Profiles[i].Address1, @Model.Profiles[i].Address2, @Model.Profiles[i].Address3</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="info-box">
                                            <i class="bx bx-envelope"></i>
                                            <h3>Email Us</h3>
                                            <p>@Model.Profiles[i].Email</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="info-box">
                                            <i class="bx bx-phone-call"></i>
                                            <h3>Call Us</h3>
                                            <p>@Model.Profiles[i].Phone</p>
                                        </div>
                                    </div>
                                </div>
                            }

                        }



                    </div>

                    <div class="col-lg-6">
                        <form asp-controller="Contact" asp-action="Index" method="post">
                            <div class="form-row">
                                <div class="col-md-6 form-group">
                                    <input asp-for="Name " type="text" name="name" class="form-control" id="name" placeholder="Your Name" />
                                    <span asp-validation-for="Name" class="text-danger validate"></span>
                                </div>
                                <div class="col-md-6 form-group">
                                    <input asp-for="Email" type="email" class="form-control" name="email" id="email" placeholder="Your Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <input asp-for="Subject" type="text" class="form-control" name="subject" id="subject" placeholder="Subject" />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <textarea asp-for="Message" class="form-control" name="message" rows="5" placeholder="Message"></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                            <div class="text-center "><button type="submit" class="btn btn-primary">Send Message</button></div>
                        </form>
                    </div>

                </div>

            </div>
        </section><!-- End Contact Section -->
        <!-- ======= Map Section ======= -->
        <section class="map mt-2">
            <div class="container-fluid p-0">
                <iframe src="https://www.google.com/maps/place/MyDar/31.0387145,31.3952824,15z/data=!4m5!3m4!1s0x0:0x52a0875dd376bcab!8m2!3d31.0387145!4d31.3952824" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
            </div>
        </section><!-- End Map Section -->

    </main><!-- End #main -->
    @section Scripts
{
        <partial name="_Validation" />
    }
}
else
{
    <section class="contact" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
        <div class="container">

            <div class="row">

                <div class="col-lg-10">
                    <p>Your Message has been sent successfuly, Thank you. <a asp-controller="Contact" asp-action="Index">Send another Message</a></p>
                </div>
            </div>

        </div>
    </section><!-- End Contact Section -->
}
